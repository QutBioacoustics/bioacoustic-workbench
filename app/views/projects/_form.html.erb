<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :urn %><br />
    <%= f.text_field :urn %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
	<pre><%= @project.notes.to_yaml %></pre>
  </div>
  <div class="sites">
	<%= f.label :sites %><br />
	<%= f.collection_select :site_ids, @all_sites, :id, :name, { :selected => @project.sites.collect { |s| s.id } }, { :multiple => true }  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
