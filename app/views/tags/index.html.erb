<h1>Listing tags</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Is taxanomic</th>
    <th>Class</th>
    <th>Type of tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.text %></td>
    <td><%= tag.is_taxanomic %></td>
    <td><%= tag.class %></td>
    <td><%= tag.type_of_tag %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

